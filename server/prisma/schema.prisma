generator client {
    provider = "prisma-client-js"
}

datasource db {
    url      = env("DATABASE_URL")
    provider = "mysql"
}

model Permissions {
    id    Int     @id @default(autoincrement())
    slug  String  @unique
    name  String
    Roles Roles[]
}

model Roles {
    id          Int           @id @default(autoincrement())
    slug        String        @unique
    name        String
    permissions Permissions[]
}
